$("#portfolio").click(function(){
	$("#imgplaceholder").css("background-image", "url(images/bck_portfolio.jpg)"); 
	$("#gallery").empty()
	var pics = [
		{
			title:'Szoveg1',
			src:'portfolio_1.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_2.jpg'
		},
		{
			title:'Szoveg3',
			src:'portfolio_3.jpg'
		},
		{
			title:'Szoveg4',
			src:'portfolio_4.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_5.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_6.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_7.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_8.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_9.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_10.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_11.jpg'
		},
		{
			title:'Szoveg2',
			src:'portfolio_12.jpg'
		}
	];
	for(i in pics){
		var divStr = "<div class=\"galleryitem\"><a  rel=\"gallery1\" id=\"port" + i + "\" title=\"" + pics[i].title + "\" href=\"images/" + pics[i].src + "\"><img src=\"images/thumb_" + pics[i].src + "\"/></a></div>";
		$("#gallery").append(divStr);
		
		$("#inline").fancybox({
			'hideOnContentClick': true
		});
	}

	$("#gallery .galleryitem a").fancybox({
			'transitionIn'	:	'elastic',
			'transitionOut'	:	'elastic',
			'speedIn'		:	600, 
			'speedOut'		:	200, 
			'overlayShow'	:	false
	});

});

