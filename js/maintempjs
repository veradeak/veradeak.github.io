$("#references").click(function(){
	$("#imgplaceholder").css("background-image", "url(images/bck_references.jpg)"); 
	$("#gallery").empty()
	var pics = [
		{
			title:'Poster',
			src:'references_1.jpg'
		},
		{
			title:'Poster',
			src:'references_2.jpg'
		},
		{
			title:'Header',
			src:'references_3.jpg'
		}
	];
	for(i in pics){
		var divStr = "<div class=\"galleryitem\"><a rel=\"gallery1\" id=\"port" + i + "\" title=\"" + pics[i].title + "\" href=\"images/" + pics[i].src + "\"><img src=\"images/thumb_" + pics[i].src + "\"/></a></div>";
		$("#gallery").append(divStr);

		/* Using custom settings */
		
		$("#inline").fancybox({
			'hideOnContentClick': true
		});

		/* Apply fancybox to multiple items */
	}
	$("#gallery .galleryitem a").fancybox({
			'transitionIn'	:	'elastic',
			'transitionOut'	:	'elastic',
			'speedIn'		:	600, 
			'speedOut'		:	200, 
			'overlayShow'	:	false
	});
});


$("#me").click(function(){
	$("#imgplaceholder").css("background-image", "url(images/bck_me.jpg)"); 
	$("#gallery").empty()
});
	

